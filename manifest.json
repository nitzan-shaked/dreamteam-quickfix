{
  "manifest_version": 3,
  "name": "DreamTeam Attendance Filler",
  "version": "1.0",
  "description": "Auto-fill attendance hours for missing days.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
	"default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://app.dreamteam.io/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
