{
    "manifest_version": 3,
    "name": "DreamTeam-Quickfix",
    "version": "1.0",
    "description": "Auto-fill attendance hours for missing days.",
    "permissions": [
        "declarativeContent",
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icons/icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://app.dreamteam.io/*"],
            "js": ["config.js", "content.js"],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    }
}
